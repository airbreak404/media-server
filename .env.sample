# Media Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Timezone and User Settings
TZ=America/Detroit
PUID=1000
PGID=1000
UMASK=002

# Storage Mount Points
MOVIES_MOUNT=/mnt/movies
TV_MOUNT=/mnt/tv
DOWNLOADS_DIR=/mnt/movies/downloads

# Cloudflare Tunnel Configuration
# Run scripts/03_cloudflared_login_and_tunnel.sh to generate these values
CF_TUNNEL_NAME=media-tunnel
CF_TUNNEL_ID=<REPLACE_WITH_TUNNEL_ID>
CF_TUNNEL_CREDENTIALS=/etc/cloudflared/<REPLACE_WITH_TUNNEL_ID>.json
CF_DOMAIN=tylerhoward.org

# Service Subdomains
JELLYFIN_HOST=tv.tylerhoward.org
JELLYSEERR_HOST=requests.tylerhoward.org
SONARR_HOST=sonarr.tylerhoward.org
RADARR_HOST=radarr.tylerhoward.org
PROWLARR_HOST=prowlarr.tylerhoward.org
RDT_HOST=rdt.tylerhoward.org

# Optional: API Keys (generated after first boot)
# Used by scripts/06_configure_apps_via_api.py for automated configuration
SONARR_API_KEY=
RADARR_API_KEY=
PROWLARR_API_KEY=
JELLYSEERR_API_KEY=
JELLYFIN_API_KEY=

# Optional: Real-Debrid Configuration
RDT_API_KEY=

# Optional: Indexer API Keys for Prowlarr
# Add your indexer API keys here for automated setup

# Tailscale Configuration (Optional)
# Enable Tailscale for secure SSH access
INSTALL_TAILSCALE=true      # Set to false to skip Tailscale installation
TAILSCALE_ENABLE_SSH=true   # Enable Tailscale SSH functionality
